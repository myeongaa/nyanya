<%= form_tag(bang_index_path, method: "post", multipart: true) do %>
    <div class="form-group">
        <select id="bigsorts" name="bigsorts">
          <option value="">--</option>
          <% @bigsorts.each do |b| %>
              <option value="<%= b.id %>"><%= b.name %></option>
          <% end %>
      </select>
      <select id="smallsorts" name="smallsorts">
          <option value="">--</option>
          <% @smallsorts.each do |s| %>
              <option value="<%= s.id %>" class="<%= s.bigsort.id %>"><%= s.name %></option>
          <% end %>
      </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">제목</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="제목을 입력하세요:)">
    </div>
     <div class="form-group">
        <label for="exampleInputEmail1">소개</label>
        <input type="text" name="introduce" class="form-control" id="exampleInputEmail1" placeholder="소개를 입력하세요:)">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">내용</label>
        <textarea class="form-control" type="text" name="content" rows="15" placeholder="내용을 써주세요:)"></textarea>
    </div>
    <div class="form-group">
        인원
        <input type="number"  min="1" value="1" name="person_limit"/>
    </div>
  
    <div class="form-group">
        <label for="exampleInputFile">대표 이미지</label>
        <input type="file" id="exampleInputFile" name="file_url">
    <div class="form-group">
        모임 날짜
        <p>Date: <input type="text" id="datepicker" name="bang_date"></p>
    </div>
    <div class="form-group">
        모임 시간
        <input type="text" class="timepicker" name="bang_time"/>
    </div>
    <button type="submit" class="btn btn-default">작성하기</button>
<% end %>
    </div>

<script>
    $(document).ready(function() {
        $("#smallsorts").chained("#bigsorts");
    });
    
    $( function() {
        $( "#datepicker" ).datepicker({
            dateFormat:"yy-mm-dd",
            minDate: 0
        });
        
    } );
  
    $('.timepicker').timepicker({
        timeFormat: 'H:mm p',
        interval: 60,
        minTime: '0',
        maxTime: '11:00pm',
        defaultTime: '10',
        startTime: '00:00am',
        dynamic: false,
        dropdown: true,
        scrollbar: true
    });
</script>